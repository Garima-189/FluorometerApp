<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical"
    android:gravity="center_vertical"
    android:orientation="vertical"
    tools:context=".DetermineConcentrationActivity">


  <TextView
      android:id="@+id/slopeIntercept"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:gravity="center"
      android:text="Slope, intercept: 0,0\n (make sure you have calibrated your device)"
      app:layout_constraintBottom_toTopOf="@+id/determineConc"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <Button
      android:id="@+id/determineConc"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginEnd="162dp"
      android:layout_marginLeft="162dp"
      android:layout_marginRight="162dp"
      android:layout_marginStart="162dp"
      android:text="Determine Concentration"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <TextView
      android:id="@+id/intensity"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginEnd="175dp"
      android:layout_marginLeft="178dp"
      android:layout_marginRight="175dp"
      android:layout_marginStart="178dp"
      android:text="Intensity= 0 lux"
      app:layout_constraintBottom_toTopOf="@+id/concentration"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/determineConc" />

  <TextView
      android:id="@+id/concentration"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginEnd="177dp"
      android:layout_marginLeft="176dp"
      android:layout_marginRight="177dp"
      android:layout_marginStart="176dp"
      android:text="Concentration= 0 g/L"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/determineConc" />
</androidx.constraintlayout.widget.ConstraintLayout>